<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="getfresh.com.getfreshapplication.fragment.LoginFragment">


    <ImageSwitcher
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/login_switcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/label_phone"
        android:measureAllChildren="false"
        android:minWidth="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Phone No (Home/Mobile)"
        android:id="@+id/label_phone"
        android:layout_above="@+id/edit_phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone|textAutoCorrect"
        android:ems="10"
        android:id="@+id/edit_phone"
        android:hint="1234567890"
        android:layout_above="@+id/edit_password"
        android:layout_alignLeft="@+id/label_phone"
        android:layout_alignStart="@+id/label_phone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/login_button"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/edit_password"
        android:visibility="visible"
        android:hint="Password"
        android:password="false"
        android:layout_above="@+id/login_button"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
